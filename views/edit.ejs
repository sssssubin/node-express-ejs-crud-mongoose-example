<div class="form-container">
  <div class="card">
    <h4 class="card__title">Edit Post</h4>
    <form action="/edit/<%= post.id %>" method="post" class="card__form form">
      <input type="hidden" name="id" value="<%= post.id %>" />

      <div class="form-group row-group">
        <label for="title" class="form__label">Title:</label>
        <input
          type="text"
          id="title"
          name="title"
          value="<%= post.title %>"
          required
          class="form__input"
        />
      </div>

      <div class="form-group row-group">
        <label for="content" class="form__label">Content:</label>
        <textarea id="content" name="content" required class="form__textarea">
<%= post.content %></textarea
        >
      </div>
      <div class="col-group">
        <a href="/" class="button button__home">Back to Home</a>
        <button type="submit" class="button button__submit">Update Post</button>
      </div>
    </form>
  </div>
</div>
